<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:fitsSystemWindows="true"
    tools:context=".activity.SouSuoTieZiActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sousuo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="取消"
            android:layout_marginLeft="16dp"
            android:textColor="#575757"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索帖子"
            android:textSize="17sp"
            android:textColor="#575757"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b2b2b2"/>

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search"
            android:hint="搜索关键词"
            android:paddingLeft="5dp"></EditText>
    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#b2b2b2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_search01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:text="标题"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_selector"
            />
        <Button
            android:id="@+id/btn_search02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="单位"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_selector"
            android:layout_marginLeft="16dp"/>

        <!--<Button-->
            <!--android:id="@+id/btn_search03"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="40dp"-->
            <!--android:text="标签"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:background="@drawable/search_selector"/>-->
    </LinearLayout>
    <GridView
        android:id="@+id/gv_fatie_label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:numColumns="4"
        ></GridView>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="6dp"
        android:background="#f5f5f5"/>
    <net.cpsec.zfwx.guodian.ui.YRecycleview
        android:id="@+id/yrv_search_tiezi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
    <!--<ListView-->
        <!--android:id="@+id/lv_suosuotiezi_list"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"></ListView>-->
</LinearLayout>
