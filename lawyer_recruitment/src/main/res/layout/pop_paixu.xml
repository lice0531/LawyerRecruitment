<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_e7eaf3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_popupwindow_shijian"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_popupwindow_shijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"
                android:text="按时间排序"
                android:textColor="@drawable/selector_recommend_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_popupwindow_shijian"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/selector_recommend" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_popupwindow_redu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_popupwindow_redu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"
                android:text="按热度排序"
                android:textColor="@drawable/selector_recommend_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_popupwindow_redu"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/selector_recommend" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_touch_paixu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00000000"  />
</LinearLayout>