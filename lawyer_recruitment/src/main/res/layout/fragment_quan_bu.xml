<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.QuanBuFragment">
    <RelativeLayout
        android:id="@+id/rl_tiezi_xiala"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_xuanxiangzk"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b2b2b2"/>
<LinearLayout
    android:id="@+id/ll_quanbu_acationbar"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:orientation="horizontal"
    android:visibility="gone">
    <RelativeLayout
        android:id="@+id/rl_jiaoliu_quanbu"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_qunbu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="全部"
            android:textSize="16sp"
            android:textColor="#575757"
            android:drawableRight="@drawable/icon_xuanxiangzk"/>
    </RelativeLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#b2b2b2"/>
    <RelativeLayout
        android:id="@+id/rl_jiaoliupaixu"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_paixu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="按时间排序"
            android:textSize="16sp"
            android:textColor="#575757"
            android:drawableRight="@drawable/icon_xuanxiangzk"/>
    </RelativeLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b2b2b2"/>
    <net.cpsec.zfwx.guodian.ui.YRecycleview
        android:id="@+id/yrv_jiaoliu_quanbu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
</LinearLayout>
