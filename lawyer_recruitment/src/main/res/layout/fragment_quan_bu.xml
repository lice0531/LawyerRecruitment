<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.QuanBuFragment">
    <LinearLayout
        android:id="@+id/ll_quanbu_acationbar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_jiaoliu_quanbu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_qunbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/icon_xuanxiangzk"
                android:text="全部"
                android:textColor="#575757"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_jiaoliupaixu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_paixu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/icon_xuanxiangzk"
                android:text="按时间排序"
                android:textColor="#575757"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f6f6f6"></View>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="#b2b2b2"/>-->
    <net.cpsec.zfwx.guodian.ui.YRecycleview
        android:id="@+id/yrv_jiaoliu_quanbu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
    <ImageView
        android:id="@+id/iv_xinhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/pic_xinhao"
        android:layout_marginTop="100dp"
        android:visibility="gone"/>
</LinearLayout>
