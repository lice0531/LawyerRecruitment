<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="#ffffff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        app:riv_border_color="#bbbbbb"
        app:riv_border_width="1dp"
        app:riv_corner_radius="15dp"
        app:riv_mutate_background="true"
        android:layout_marginTop="10dp"
        app:riv_oval="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        app:riv_tile_mode="repeat"  />
<ImageView
    android:id="@+id/hat_img"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignLeft="@id/img_icon"
    android:layout_alignRight="@id/img_icon"
   android:scaleType="fitXY"
 android:src="@drawable/aaa"
    android:visibility="invisible"
    />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:text="提莫"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/tv_accept"
        android:layout_alignLeft="@+id/tv_phone"
        android:layout_alignStart="@+id/tv_phone" />
   <TextView
       android:id="@+id/tv_phone"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:textSize="13sp"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="5dp"
       android:layout_toRightOf="@id/img_icon"
       android:layout_below="@id/tv_name"
       />
    <TextView
        android:id="@+id/tv_accept"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/aliwx_white"
        />

</RelativeLayout>